<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="kr.co.tvtalk.ChattingActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/another_with_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_profile"

        />
    <TextView
        android:id="@+id/another_with_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/another_with_profile_image"
        android:text="gong"
        android:layout_marginLeft="7dp"
        />
    <TextView
        android:id="@+id/another_text_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_catbox"
        android:layout_below="@id/another_with_name"
        android:layout_toRightOf="@+id/another_with_profile_image"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="70dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="7dp"
        />
    <ImageView
        android:id="@+id/another_with_emotion"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_below="@+id/another_text_with"
        android:layout_toRightOf="@id/another_with_profile_image"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="70dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="7dp"
        />

</RelativeLayout>