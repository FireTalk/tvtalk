<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.tvtalk.LoginAfterActivity"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:id="@+id/loginafter_action_bar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/underline_bar"
        >
        <ImageView
            android:id="@+id/loginafter_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_btn"
            android:padding="13dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="계정정보 변경"
            android:textSize="15sp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/loginafter_action_bar"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테디아"
            android:textSize="36sp"
            android:layout_marginTop="5dp"
            android:textColor="#252525"
            />
        <ImageView
            android:id="@+id/name_repair"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/capa_1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
             />
    </LinearLayout>

    <TextView
        android:id="@+id/login_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hottalk@hotmail.com"
        android:paddingLeft="63dp"
        android:backgroundTint="#252525"
        android:textColor="#252525"
        android:layout_below="@id/profile_layout"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/login_id_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/login_email_id"
        android:layout_alignBaseline="@id/login_email_id"
        android:textColor="#252525"
        android:text="아이디"
        android:textSize="18sp"
        android:layout_marginLeft="2dp"
        />
    <View
        android:layout_below = "@id/login_email_id"
        android:layout_height="1dip"
        android:layout_width="fill_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="#252525" />

    <Button
        android:id="@+id/login_repair_btn"
        android:layout_below="@id/login_email_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="비밀번호 변경하기"
        android:textColor="#252525"
        android:background="@drawable/registent_button"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="50dp"
        android:layout_below="@id/login_repair_btn"
        android:text="로그아웃"
        android:textColor="#ffffff"
        android:background="#252525"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        />




</RelativeLayout>
