<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kr.co.tvtalk.LoginAfterActivity"
    android:background="#ffffff"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gong"
        android:layout_marginTop="95dp"
        />
    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테디아"
            android:textSize="36sp"
            android:layout_marginTop="5dp"
            android:textColor="#252525"
            />
        <ImageView
            android:id="@+id/name_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/capa_1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/login_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="hottalk@hotmail.com"
        android:paddingLeft="63dp"
        android:backgroundTint="#252525"
        android:textColorHint="#4d252525"
        android:layout_below="@id/profile_layout"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:paddingBottom="15dp"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/login_id_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/login_email_id"
        android:layout_alignBaseline="@id/login_email_id"
        android:textColor="#252525"
        android:text="아이디"
        android:textSize="14sp"
        android:layout_marginLeft="2dp"
        />
    <EditText
        android:id="@+id/login_password"
        android:layout_below="@id/login_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="63dp"
        android:paddingBottom="15dp"
        android:hint="영문,숫자 혼용 4~6자리"
        android:backgroundTint="#252525"
        android:textColorHint="#4d252525"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/login_password_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textColor="#252525"
        android:layout_alignBaseline="@id/login_password"
        android:layout_alignLeft="@id/login_password"
        android:textSize="14sp"
        android:layout_marginLeft="2dp"
        />
    <EditText
        android:id="@+id/login_confirm"
        android:layout_below="@id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="63dp"
        android:paddingBottom="15dp"
        android:hint="다시 한번 입력해주세요"
        android:backgroundTint="#252525"
        android:textColorHint="#4d252525"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/login_confrim_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="번호확인"
        android:textColor="#252525"
        android:layout_alignBaseline="@id/login_confirm"
        android:layout_alignLeft="@id/login_confirm"
        android:textSize="14sp"
        android:layout_marginLeft="2dp"
        />

    <Button
        android:id="@+id/login_repair_btn"
        android:layout_below="@id/login_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="정보변경"
        android:textColor="#252525"
        android:background="@drawable/registent_button"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="50dp"
        android:layout_below="@id/login_repair_btn"
        android:text="로그아웃"
        android:textColor="#ffffff"
        android:background="#252525"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        />


</RelativeLayout>
