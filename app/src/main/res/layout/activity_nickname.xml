<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kr.co.tvtalk.NicknameActivity"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:id="@+id/nickname_action_bar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/underline_bar"
        >
        <ImageView
            android:id="@+id/nickname_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_btn"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="닉네임 변경하기"
            android:textSize="17sp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nickname_action_bar"
        android:layout_marginBottom="100dp"
        >
        <TextView
            android:id="@+id/nickname_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="63dp"
            android:paddingBottom="15dp"
            android:text="테디아"
            android:textColor="#252525"
            android:backgroundTint="#252525"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/nickname_new"
            android:layout_below="@id/nickname_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="63dp"
            android:paddingBottom="15dp"
            android:hint="변경할 닉네임을 입력하세요."
            android:backgroundTint="#252525"
            android:textColorHint="#4d252525"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/nickname_newText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신규별명"
            android:textColor="#252525"
            android:layout_alignBaseline="@id/nickname_new"
            android:layout_alignLeft="@id/nickname_new"
            android:textSize="14sp"
            android:layout_marginLeft="2dp"
            />
        <Button
            android:id="@+id/nickname_changeBTN"
            android:layout_below="@id/nickname_new"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="닉네임 변경하기"
            android:textColor="#252525"
            android:background="@drawable/registent_button"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/nickname_currentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재별명"
            android:textColor="#252525"
            android:textSize="14sp"
            android:layout_alignBaseline="@+id/nickname_current"
            android:layout_alignBottom="@+id/nickname_current"
            android:layout_alignLeft="@+id/nickname_current"
            android:layout_alignStart="@+id/nickname_current" />
    </RelativeLayout>

</RelativeLayout>
