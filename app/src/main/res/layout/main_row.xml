<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_row_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@drawable/underline_bar"
    >
    <ImageView
        android:src="#d7d7d7"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:id="@+id/broadcast_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />

    <RelativeLayout
        android:layout_marginBottom="6dp"
        android:id="@+id/main_row_under_img"
        android:layout_below="@+id/broadcast_image"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="20dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="13sp"
            android:id="@+id/broadcast_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="temp"

            android:textColor="#252525"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/isbookmark"
            android:layout_width="13dp"
            android:layout_height="12dp"
            android:src="@drawable/bookmark_false"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/main_row_under_img"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/broadcast_kind_of"
            android:layout_width="34dp"
            android:layout_height="14dp"
            android:src="@drawable/sbs"
            />
        <TextView
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/broadcast_kind_of"
            android:id="@+id/broadcast_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="temp"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"
            android:textColor="#777777"
            />

    </RelativeLayout>



</RelativeLayout>
