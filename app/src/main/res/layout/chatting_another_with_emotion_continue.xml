<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatting_another_emoticon_with_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    >
    <ImageView
        android:id="@+id/another_with_emotion_continue"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="70dp"
        />
    <TextView
        android:layout_below="@+id/another_with_emotion_continue"
        android:id="@+id/another_with_text_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_catbox"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="70dp"
        android:textColor="#FFFFFF"
        />
</RelativeLayout>
