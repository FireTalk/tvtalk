<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ice_chatting_me_with_emotion_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ice_chatting_me_with_emotion"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="70dp"
        />


    <TextView
        android:layout_below="@+id/ice_chatting_me_with_emotion"
        android:id="@+id/ice_chatting_me_with_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_catbox_me"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="70dp"
        />
    <ImageView
        android:id="@+id/ice_chatting_with_me_like"
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:src="@drawable/bookmark_false"
        android:layout_toLeftOf="@+id/ice_chatting_me_with_text"
        android:layout_marginRight="-63dp"
        android:layout_alignBottom="@+id/ice_chatting_me_with_text"
        />
    <TextView
        android:id="@+id/ice_chatting_me_with_like_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="0"
        android:layout_toLeftOf="@+id/ice_chatting_with_me_like"
        android:layout_marginRight="2dp"
        android:layout_alignBottom="@+id/ice_chatting_with_me_like"
        android:layout_marginBottom="-3dp"
        />

</RelativeLayout>
