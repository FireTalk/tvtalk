<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="kr.co.tvtalk.ChattingActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ice_chatting_another_emotion_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ice_another_profile_image_emotion"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_profile"

        />
    <TextView
        android:id="@+id/ice_another_name_emotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ice_another_profile_image_emotion"
        android:text="tvtalk_admin"
        android:layout_marginLeft="7dp"
        />
    <ImageView
        android:id="@+id/ice_another_text_message_emotion"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_below="@id/ice_another_name"
        android:layout_toRightOf="@id/ice_another_profile_image_emotion"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="70dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="7dp"
        />
    <ImageView
        android:id="@+id/ice_chatting_another_emotion_like"
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:src="@drawable/bookmark_false"
        android:layout_toRightOf="@id/ice_another_text_message_emotion"
        android:layout_marginLeft="-63dp"
        android:layout_alignBottom="@id/ice_another_text_message_emotion"
        />
    <TextView
        android:id="@+id/ice_chatting_another_emotion_like_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="0"
        android:layout_toRightOf="@id/ice_another_text_message_emotion"
        android:layout_marginLeft="-47dp"
        android:layout_alignBottom="@id/ice_chatting_another_emotion_like"
        android:layout_marginBottom="-3dp"
        />
</RelativeLayout>